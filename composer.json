{
    "name": "benbjurstrom/cloudflare-images-php",
    "description": "A PHP client for the Cloudflare Images API",
    "keywords": ["cloudflare images", "cloudflare", "php", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Bjurstrom",
            "email": "bbjurstrom@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "sammyjo20/saloon": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "pestphp/pest": "^2.0.0",
        "pestphp/pest-plugin-arch": "2.x-dev",
        "phpstan/phpstan": "^1.9.11",
        "symfony/var-dumper": "^6.2.3"
    },
    "autoload": {
        "psr-4": {
            "BenBjurstrom\\CloudflareImages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint -v",
        "test:lint": "pint --test -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
